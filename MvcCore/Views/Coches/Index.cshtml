@model IEnumerable<MvcCore.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Insert" asp-controller="Coches">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCoche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor)
            </td>
            <td>
                <img src="@item.Imagen" style="width: 100px; height:auto" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Coches", new { idcoche = item.IdCoche }) |
                @Html.ActionLink("Details", "Details", "Coches", new { idcoche = item.IdCoche}) |
                @*@Html.ActionLink("Delete", "Delete", "Coches",  new { idcoche = item.IdCoche })*@
                <a asp-controller="Coches" asp-action="Delete" asp-route-idcoche="@item.IdCoche" onclick="return confirm('Are you sure you want to delete this item?');">BORRAR</a>
            </td>
        </tr>
}
    </tbody>
</table>
